{
  // "extends": "@dxe/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "Preserve",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
